<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/xd_about_phone_header_illustration_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/xd_pref_card_radius-outer"
        app:cardElevation="0dp">
            
        <com.xdroidui.preferences.xdCardPrefWall
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:elevation="0dp"
          android:gravity="center"
          android:orientation="vertical" />
                
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/xd_clock_bg"
          android:alpha="0.7" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:background="@drawable/xd_pref_card_account"
          android:clipToPadding="false"
          android:baselineAligned="false"
          android:orientation="horizontal">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
  
              <ImageView
                  android:id="@+id/xd_avatar"
                  android:layout_width="68dp"
                  android:layout_height="68dp"
                  android:layout_marginStart="16dp" />
  
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:padding="16dp"
                  android:layout_weight="1">
  
                  <TextView
                      android:id="@+id/xd_account_owner"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:ellipsize="marquee"
                      android:singleLine="true"
                      android:text="@string/xd_dashboard_device"
                      android:textColor="@color/xd_clock_color"
                      android:layout_below="@id/xd_avatar"
                      android:layout_alignStart="@id/xd_avatar"
                      style="@style/xd_text_primary_medium"/>
              
                  <TextView
                      android:id="@+id/xd_account_summary"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/xd_dashboard_account_summary"
                      android:textSize="12dp"
                      android:textColor="@color/xd_clock_color"
                      android:alpha="0.8"
                      android:layout_below="@id/xd_account_owner"
                      android:layout_alignStart="@id/xd_account_owner"
                      style="@style/xd_text_secondary"/>
          
              </RelativeLayout>
              
          </LinearLayout>
          
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
