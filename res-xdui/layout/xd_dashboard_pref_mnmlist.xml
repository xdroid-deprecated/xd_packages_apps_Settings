<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:id="@+id/container"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/xd_pref_card_vertical_padding"
     android:layout_marginBottom="4dp"
     android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
     android:background="@drawable/xd_pref_card_mnmlist"
     android:clipToPadding="false">

     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/m3_sys_color_dynamic_light_on_tertiary_container"
            style="@style/xd_text_primary_medium" />

       <TextView
            android:id="@+android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title"
            android:textColor="@color/m3_sys_color_dynamic_light_on_tertiary_container"
            android:alpha="0.8"
            style="@style/xd_text_secondary"
            android:maxLines="4" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minWidth="64dp"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:cardBackgroundColor="#85FFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="99dp">
        
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/xd_dashboard_icn-next"
                    android:tint="@color/m3_sys_color_dynamic_light_on_tertiary_container" />    
        
        </androidx.cardview.widget.CardView>
    
    </LinearLayout>

</LinearLayout>
