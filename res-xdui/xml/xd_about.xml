<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/xd_about">

    <!-- xd. About Header -->
    <Preference
        android:key="xd_about_header"
        settings:layout="@layout/xd_about_header"
        android:selectable="false"/>

    <!-- xd. Desc -->
    <Preference
        android:key="xd_about_desc"
        settings:layout="@layout/xd_about_desc"
        android:selectable="false"/>

    <!-- Core Team Category -->
    <PreferenceCategory
        android:key="xd_about_core_team"
        android:title="@string/xd_about_core_team_cat">

        <!-- xyzuan -->
        <Preference
            android:key="xd_about_xyzuan"
            settings:layout="@layout/xd_about_core_pref"
            android:icon="@drawable/xd_about_xyzuan"
            android:title="@string/xd_about_core_xyzuan"
            android:summary="@string/xd_about_core_xyzuan_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/xyzuan"/>

        </Preference>

        <!-- friction -->
        <Preference
            android:key="xd_about_friction"
            android:icon="@drawable/xd_about_friction"
            settings:layout="@layout/xd_about_core_pref"
            android:title="@string/xd_about_core_friction"
            android:summary="@string/xd_about_core_friction_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/gerobaksariroti"/>

        </Preference>

    </PreferenceCategory>

    <!-- Contributor Category -->
    <PreferenceCategory
        android:key="xd_about_contributor"
        android:title="@string/xd_about_contributor_cat">

        <!-- rdclxvi -->
        <Preference
            settings:layout="@layout/xd_about_core_pref"
            android:icon="@drawable/xd_about_rdclxvi"
            android:title="@string/xd_about_contributor_rdclxvi"
            android:summary="@string/xd_about_contributor_rdclxvi_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/rdclxvi"/>

        </Preference>

        <!-- iszon -->
        <Preference
            settings:layout="@layout/xd_about_core_pref"
            android:icon="@drawable/xd_about_unknown"
            android:title="@string/xd_about_contributor_iszon"
            android:summary="@string/xd_about_contributor_iszon_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/iszon"/>

        </Preference>
    </PreferenceCategory>
    
</PreferenceScreen>
